 110 PROCEDURE GetSym();
 111 BEGIN
 112         CASE ch OF              
 113         CHR(1)..CHR(39),
 114         CHR(44),
 115         CHR(47)..CHR(62),
 116         CHR(64)..CHR(90), 
 117         CHR(94  )..CHR(122),
 118         CHR(126)..CHR(255):sym:=char;iden:=ch; Read(); (*alles außer Metachar*)
 119         | "*":sym:=asterisk; Read();
 120         | "+":sym:=plus; Read();
 121         | "?":sym:=qum; Read();
 122         | "|":sym:=bar; Read();
 123         | "[":sym:=osquareBr; Read();
 124         | "]":sym:=csquareBr; Read();
 125         | "\":sym:=escape; Read();
 126         | "(":sym:=lKlammer; Read();
 127         | ")":sym:=rKlammer; Read();
 128         | "{":sym:=glKlammer; Read();
 129         | "}":sym:=grKlammer; Read();
 130         | "-":sym:=strich;Read();  (*auch nicht Metachar; Algorithmus Ã¤ndern *)
 131         | ".":sym:=punkt;Read();
 132         ELSE sym:=other
 133         END
 134 END GetSym;
