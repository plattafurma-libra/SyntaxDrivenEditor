 193 PROCEDURE SingleCharEsc (VAR char:CHAR); 
 194 BEGIN
 195         CASE sym OF
 196           escape: char:="\";
 197         | bar: char:="|";
 198         | strich: char:="-";
 199         | osquareBr: char:="[";
 200         | csquareBr: char:="]";
 201         | neg: char:="^";
 202         | lKlammer: char:="(";
 203         | rKlammer: char:=")";
 204         | glKlammer: char:="{";
 205         | grKlammer: char:="}";
 206         | punkt: char:=".";
 207         | plus: char:="+";
 208         | asterisk: char:="*";
 209         | qum: char:="?";
 210         ELSE 
 211                 IF iden="n" THEN char:=0AX; 
 212                 ELSIF iden="r" THEN char:=0DX;
 213                 ELSIF iden="t" THEN char:=09X;
 214                 ELSE (* Interface_Halt.halt.HaltPar(127); *) Error(2);
 215                  END;
 216         END;
 217         GetSym();
 218 END SingleCharEsc;
