 119 PROCEDURE GetSym();
 120 BEGIN
 121         CASE ch OF              
 122         CHR(1)..CHR(39),
 123         CHR(44),
 124         CHR(47)..CHR(62),
 125         CHR(64)..CHR(90), 
 126         CHR(94  )..CHR(122),
 127         CHR(126)..CHR(255):sym:=char;iden:=ch; Read(); (*alles außer Metachar*)
 128         | "*":sym:=asterisk; Read();
 129         | "+":sym:=plus; Read();
 130         | "?":sym:=qum; Read();
 131         | "|":sym:=bar; Read();
 132         | "[":sym:=osquareBr; Read();
 133         | "]":sym:=csquareBr; Read();
 134         | "\":sym:=escape; Read();
 135         | "(":sym:=lKlammer; Read();
 136         | ")":sym:=rKlammer; Read();
 137         | "{":sym:=glKlammer; Read();
 138         | "}":sym:=grKlammer; Read();
 139         | "-":sym:=strich;Read();  (*auch nicht Metachar; Algorithmus Ã¤ndern *)
 140         | ".":sym:=punkt;Read();
 141         ELSE sym:=other
 142         END
 143 END GetSym;
