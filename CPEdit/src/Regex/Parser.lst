 202 PROCEDURE SingleCharEsc (VAR char:CHAR); 
 203 BEGIN
 204         CASE sym OF
 205           escape: char:="\";
 206         | bar: char:="|";
 207         | strich: char:="-";
 208         | osquareBr: char:="[";
 209         | csquareBr: char:="]";
 210         | neg: char:="^";
 211         | lKlammer: char:="(";
 212         | rKlammer: char:=")";
 213         | glKlammer: char:="{";
 214         | grKlammer: char:="}";
 215         | punkt: char:=".";
 216         | plus: char:="+";
 217         | asterisk: char:="*";
 218         | qum: char:="?";
 219         ELSE 
 220                 IF iden="n" THEN char:=0AX; 
 221                 ELSIF iden="r" THEN char:=0DX;
 222                 ELSIF iden="t" THEN char:=09X;
 223                 ELSE (* Interface_Halt.halt.HaltPar(127); *) Error(2);
 224                  END;
 225         END;
 226         GetSym();
 227 END SingleCharEsc;
