 327 PROCEDURE charClassSub(VAR range:Range);
 328 BEGIN (*charClassSub*)
 329         GetSym(); (*osquareBr*)
 330         GetSym();NEW(range.next); range.next.sub:=TRUE;
 331         charClassExpr(range.next);
 332 END charClassSub;
