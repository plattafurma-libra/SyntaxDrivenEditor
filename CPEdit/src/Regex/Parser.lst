 320 PROCEDURE charGroup (VAR range:Range);
 321 BEGIN (*charGroup*)
 322         IF (*sym=neg*) iden="^" THEN range.pos:=FALSE; GetSym(); 
 323         ELSE range.pos:=TRUE END;
 324         posCharGroup(range);
