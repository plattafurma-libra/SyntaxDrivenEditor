 336 PROCEDURE charClassSub(VAR range:Range);
 337 BEGIN (*charClassSub*)
 338         GetSym(); (*osquareBr*)
 339         GetSym();NEW(range.next); range.next.sub:=TRUE;
 340         charClassExpr(range.next);
