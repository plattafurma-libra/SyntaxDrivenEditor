 142 PROCEDURE link(p,q:Symbol);
 143 VAR t:Symbol;
 144 
 145 BEGIN (* insert q in places indicated by linked chain p *)
 146         WHILE p # NIL DO
 147                 t := p; p:=t.next; t.next:=q;
 148         END;
 149 END link;
