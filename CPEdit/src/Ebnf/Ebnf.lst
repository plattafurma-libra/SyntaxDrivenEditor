 206      BEGIN (*term*) 
 207         p1:=NIL;q1:=NIL;r1:=NIL;s1:=NIL;        
 208         factor(p,q,r,s);           
 209         WHILE sym < bar DO 
 210                 factor(p1,q1,r1,s1);link(r,p1);r:=r1;s:=s1; 
 211         END;            
 212        
 213      END term; 
 214            
 215     BEGIN (*expression*)  
 216         q1:=NIL;s1:=NIL;  
 217         
 218         term(p,q,r,s);      
 219         WHILE sym = bar DO GetSym; term(q.alt,q1,s.next,s1);q:=q1;s:=s1; 
 220         END;    
 221         
 222     END expression;
