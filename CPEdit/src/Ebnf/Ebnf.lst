  29 CONST IdLen = 32; 
  30     ident = 0; literal = 2; lparen = 3; lbrak = 4; lbrace = 5; bar = 6; eql = 7; 
  31     rparen = 8; rbrak = 9; rbrace = 10; period = 11; other = 12; 
