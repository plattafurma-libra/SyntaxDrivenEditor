 226 PROCEDURE production;       
 227 BEGIN (*sym = ident*) 
 228         
 229         find(id$,h);
 230         GetSym; 
 231     IF sym = eql THEN GetSym ELSE error(7) END; 
 232     expression(h.entry,q,r,s); link(r,NIL);   
 233     IF sym = period THEN 
 234         GetSym
 235     ELSE error(8) 
 236     END;
 237      
 238 END production;
